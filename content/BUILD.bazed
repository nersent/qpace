tsLibrary("build_src", {
  srcs: ["build.ts"],
});

nodeEntry("build", {
  main: "build.js",
  deps: [":build_src", "//base/node"],
});

fileSet("py", {
  srcs: glob("python/**/*.*"),
  copy: true,
});

fileSet("node", {
  srcs: glob("node/**/*.*"),
  copy: true,
});

fileSet("web", {
  srcs: glob("web/**/*.*"),
  copy: true,
});
